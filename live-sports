<script>
// Ticker
(function(){
  const data=[
    {s:'‚öΩ',m:'Real Madrid vs Man City',sc:'2‚Äì1',t:'67\''},
    {s:'üèÄ',m:'Lakers vs Celtics',sc:'94‚Äì98',t:'Q3'},
    {s:'üéæ',m:'Djokovic vs Alcaraz',sc:'6‚Äì4 2‚Äì3',t:'S2'},
    {s:'üèà',m:'Chiefs vs 49ers',sc:'14‚Äì21',t:'Q2'},
    {s:'‚öΩ',m:'Arsenal vs Chelsea',sc:'1‚Äì0',t:'34\''},
    {s:'üèí',m:'Rangers vs Bruins',sc:'2‚Äì2',t:'P2'},
    {s:'‚öΩ',m:'Barcelona vs Atletico',sc:'3‚Äì2',t:'51\''},
    {s:'üéæ',m:'Swiatek vs Rybakina',sc:'4‚Äì3',t:'S1'},
  ];
  const track=document.getElementById('ticker');
  let h='';
  [data,data].forEach(arr=>arr.forEach(d=>{
    h+=`<div class="ticker-item"><span class="ti-sport">${d.s}</span><span class="ti-match">${d.m}</span><span class="ti-score">${d.sc}</span><span class="ti-time">${d.t}</span></div>`;
  }));
  track.innerHTML=h;
})();

// Sport tabs
document.querySelectorAll('.stab').forEach(b=>{
  b.addEventListener('click',function(){
    document.querySelectorAll('.stab').forEach(x=>x.classList.remove('active'));
    this.classList.add('active');
  });
});

// Date filter
document.querySelectorAll('.df-btn').forEach(b=>{
  b.addEventListener('click',function(){
    document.querySelectorAll('.df-btn').forEach(x=>x.classList.remove('active'));
    this.classList.add('active');
  });
});

// Bet slip type tabs
document.querySelectorAll('.bs-type-tab').forEach(b=>{
  b.addEventListener('click',function(){
    document.querySelectorAll('.bs-type-tab').forEach(x=>x.classList.remove('active'));
    this.classList.add('active');
  });
});

// Odds toggle
function toggleOdd(el){
  el.classList.toggle('selected');
  el.classList.toggle('sel');
  updateCount();
}

// Bet slip
function setStake(v){
  document.getElementById('stake-input').value=v;
  calcWin();
}
function calcWin(){
  const s=parseFloat(document.getElementById('stake-input').value)||0;
  const pot=(s*3.61).toFixed(2);
  document.getElementById('pot-win').textContent='$'+pot;
}
function removeSel(el){
  el.closest('.bs-sel').remove();
  updateCount();
}
function clearSlip(){
  document.getElementById('bs-selections').innerHTML='';
  document.getElementById('bs-count').textContent='0';
  document.getElementById('pot-win').textContent='$0.00';
}
function updateCount(){
  const c=document.querySelectorAll('.bs-sel').length;
  document.getElementById('bs-count').textContent=c;
}

// Live minute counter
let min=67;
setInterval(()=>{
  min++;if(min>90)min=90;
  const el=document.getElementById('fm-min');
  if(el)el.textContent=min+"'";
},60000);

// Scroll reveal
const obs=new IntersectionObserver(entries=>{
  entries.forEach(e=>{if(e.isIntersecting)e.target.classList.add('visible')});
},{threshold:0.08});
document.querySelectorAll('.rv').forEach(el=>obs.observe(el));

// Navbar scroll
window.addEventListener('scroll',()=>{
  document.getElementById('navbar').style.background=
    window.scrollY>60?'rgba(6,8,15,.99)':'rgba(6,8,15,.92)';
});
</script>
</body>
